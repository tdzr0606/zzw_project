<script type="text/javascript">
    layui.use(['element', 'table', 'layer', 'form'], function () {
        var $ = layui.jquery;
        var table = layui.table;
        var layer = layui.layer;
        var form = layui.form;
        var typeTable = table.render({
            elem: '#typeTable'
            , id: 'typeTable'
            , url: '/webAdmin/type/list'
            , cols: [[
                {checkbox: true, fixed: true}
                , {field: 'id', title: 'ID', width: 80, sort: true, fixed: true}
                , {field: 'title', title: '标签名', width: 300, sort: true}
                , {field: 'note', title: '备注', width: 400, sort: true}
                , {field: 'isPublic', title: '状态', width: 80, sort: true,templet:'#isPublic'}
            ]]
            , height: 'full-200'
            , limit: 40
            , page: true
        });


        //触发事件
        var active = {
            search: function () {
                var keyValue = $('#searchKey').val();
                typeTable.reload({where: {key: keyValue}});
            }
            , new: function () {
                $('#typeForm')[0].reset();
                $('#actionUrl').val("new");
                $('#id').val('0');
                layer.open({
                    type: 1
                    , title: "新建"
                    , closeBtn: 1
                    , area: '650px;'
                    , shade: 0.2
                    , id: 'typeFormWindow'
                    , moveType: 1
                    , resize: false
                    , content: $('#typeForm')
                });
            }
            , modify: function () {
                var checkStatus = table.checkStatus('typeTable'), data = checkStatus.data;
                if (data.length < 1) {
                    layer.msg('您必须选中一条需要修改的记录');
                    return false;
                }
                else if (data.length > 1) {
                    layer.msg('您在修改的时候,不能选中多条记录');
                    return false;
                }
                else if(data[0].isPublic == '1')
                {
                    layer.msg('当前数据已经启用,不能修改');
                    return false;
                }
                else {
                    var id = data[0].id;
                    $.ajax({
                        type: 'get',
                        url: '/webAdmin/type/info?id=' + id + '&sessionId=' + new Date().getTime(),
                        success: function (json) {
                            if (json.success) {
                                form.loadData(json.data, 'typeForm');
                                $('#actionUrl').val("modify");
                                form.render();
                                layer.open({
                                    type: 1
                                    , title: "修改"
                                    , closeBtn: 1
                                    , area: '650px;'
                                    , shade: 0.2
                                    , id: 'typeFormWindow'
                                    , moveType: 1
                                    , resize: false
                                    , content: $('#typeForm')
                                    , success: function (layero) {
                                    }
                                });
                            }
                            else {
                                layer.msg(json.message);
                            }
                        },
                        error: function (json) {
                            layer.alert("未知的错误！", {closeBtn: 0}, function () {
                                layer.closeAll();
                            });
                        }
                    });
                }
            }
            , delete: function () {
                var checkStatus = table.checkStatus('typeTable'), data = checkStatus.data;
                if (data.length < 1) {
                    layer.msg('您必须最少选中一条需要删除的记录');
                    return false;
                }
                layer.open({
                    type: 1
                    , id: 'typeDeleteAccept'
                    , content: '<div style="padding: 20px 30px;">是否真的要删除选中的记录?</div>'
                    , btn: ['确定', '取消']
                    , btnAlign: 'c'
                    , shade: 0.2
                    , resize: false
                    , yes: function () {
                        layer.closeAll();
                        var idArray = new Array();
                        for (var i = 0; i < data.length; i++) {
                            idArray[i] = data[i].id;
                        }
                        $.ajax({
                            type: 'post',
                            data: {ids: idArray.toString()},
                            url: '/webAdmin/type/delete',
                            success: function (json) {
                                if (json.success) {
                                    layer.alert(json.message, {closeBtn: 0}, function () {
                                        layer.closeAll();
                                        typeTable.reload();
                                    });
                                }
                                else {
                                    layer.alert(json.message);
                                }
                            },
                            error: function (json) {
                                layer.alert("登录超时,请重新登录！", {closeBtn: 0}, function () {
                                    layer.closeAll();
                                    window.location.reload();
                                });
                            }
                        });
                        return false;
                    }
                });
            }
            , public: function () {
                var checkStatus = table.checkStatus('typeTable');
                var data = checkStatus.data;
                if (data.length < 1)
                {
                    layer.msg('您必须最少选中一条需要处理的记录');
                    return false;
                }
                layer.open({
                    type: 1
                    , id: 'pubAccept' //防止重复弹出
                    , content: '<div style="padding: 20px 30px;">是否真的要处理选中的记录?</div>'
                    , btn: ['确定', '取消']
                    , btnAlign: 'c' //按钮居中
                    , shade: 0.2 //显示遮罩
                    , resize:false
                    , yes: function () {
                        layer.closeAll();
                        var idArray = new Array();
                        for (var i = 0; i < data.length; i++)
                        {
                            idArray[i] = data[i].id;
                        }
                        $.ajax({
                            type: 'post',
                            data: {ids: idArray.toString()}, //这里只能用Tostring 才会是 1,2,3,4,其它的会有[]
                            url: '/webAdmin/type/use',
                            success: function (json) {
                                if (json.success) {
                                    layer.alert(json.message, {closeBtn: 0}, function () {
                                        layer.closeAll();
                                        $(".layui-laypage-btn")[0].click(); //重载表格,,与上页的表格的全局变量相关,不要问我为什么这样写
                                    });
                                }
                                else {
                                    layer.alert(json.message);
                                }
                            },
                            error: function (json) {
                                console.error(json);
                                layer.alert("登录超时,请重新登录！", {closeBtn: 0}, function () {
                                    layer.closeAll();
                                    window.location.reload();
                                });
                            }
                        });
                        return false;
                    }
                });
            }
        };
        //总体上调用,是那个按钮激活哪个
        $('#typeMenuBar .layui-btn').on('click', function () {
            var othis = $(this), method = othis.data('method');
            active[method] ? active[method].call(this, othis) : '';
        });
        //form submit新建修改事件提交
        form.on('submit(typeForm)', function (data) {
            var actionUrl = "/webAdmin/type/" + $('#actionUrl').val();
            $.ajax({
                type: 'post',
                data: $('#typeForm').serialize(),
                url: actionUrl,
                success: function (json) {
                    if (json.success) {
                        layer.alert(json.message, {closeBtn: 0}, function () {
                            layer.closeAll();
                            typeTable.reload();
                        });
                    }
                    else {
                        layer.alert(json.message);
                    }
                },
                error: function (json) {
                    layer.alert("登录超时,请重新登录！", {closeBtn: 0}, function () {
                        layer.closeAll();
                        window.location.reload();
                    });
                }
            });
            return false;
        });
    });
</script>

</body>
</html>
